// Implement header

GF_FORCEINLINE u64 GfTime::GetTickCounter()
{
	LARGE_INTEGER ulCounter;
	QueryPerformanceCounter(&ulCounter);
	return ulCounter.QuadPart;
}

////////////////////////////////////////////////////////////////////////////////

GF_FORCEINLINE u64 GfTime::GetCoreFrequency() 
{
	LARGE_INTEGER ulFreq;
	QueryPerformanceFrequency(&ulFreq);
	return ulFreq.QuadPart;
}

